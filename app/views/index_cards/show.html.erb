<% provide(:section, "View Index Card") %>

<% if notice %>
  <div id="notice" class="container">
    <p class="alert alert-success" role="alert"><%= notice %></p>
  </div>
<% end %>

<div class="row padded-row">

    <div class="col-lg-6 col-md-12">
      <% if @index_card.file_group.include? "; " %>

          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner" role="listbox">

            <% @index_card.file_group.split('; ').each_with_index do |file, index| %>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <img class="d-block img-fluid active" src="/images/cards1/<%= file %>"">
                </div>
              <% else %>
                <div class="carousel-item">
                  <img class="d-block img-fluid active" src="/images/cards1/<%= file %>"">
                </div>
              <% end %>
            <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

      <% else %>
        <img src="/images/cards1/<%= @index_card.root_filename %>"/>
      <% end %>
    </div>
    <div class="col-lg-6 col-md-12">

    <table class="table table-sm">

      <tbody>
        <tr>
          <td><strong>State abbreviation:</strong></td>
          <td><%= @index_card.state_abbreviation %></td>
          <td><strong>Used check:</strong></td>
          <td>
             <% if @index_card.used_check == true %>
               <i class="fa fa-check fa-2x text-success"></i>
              <% else %>
               <i class="fa fa-times fa-2x text-danger"></i>
              <% end %>
          </td>
        </tr>
        <tr>
          <td><strong>Root filename:</strong></td>
          <td colspan="3" class="smallTableFont"><%= @index_card.root_filename %></td>
        </tr>
        <tr>
          <td><strong>File group:</strong></td>
          <td colspan="3" class="smallTableFont"><%= @index_card.file_group %></td>
        </tr>
        <tr>
          <td><strong>OCR Text:</strong></td>
          <td colspan="3"><%= @index_card.ocr_text %></td>
        </tr>
      </tbody>
    </table>


    
  </div>
  <div class="container">
    <div class="text-center">
      <div class="btn-group col-md-auto">
        <%= link_to '<i class="fa fa-list"></i> List'.html_safe, index_cards_path, class: "btn btn-secondary"%>
        <%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_index_card_path(@index_card), class: "btn btn-info"%>
        <%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, @index_card, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
