<% provide(:section, "Edit Index Card") %>

<div class="row padded-row">
	<div class="col-lg-6 col-md-12">
    <% if @index_card.file_group.include? "; " %>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner" role="listbox">

        <% @index_card.file_group.split('; ').each_with_index do |file, index| %>
          <% if index == 0 %>
            <div class="carousel-item active">
              <img class="d-block img-fluid active" src="/images/cards1/<%= file %>"">
            </div>
          <% else %>
            <div class="carousel-item">
              <img class="d-block img-fluid active" src="/images/cards1/<%= file %>"">
            </div>
          <% end %>
        <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    <% else %>
      <img src="/images/cards1/<%= @index_card.root_filename %>"/>
    <% end %>
  </div>
  <div class="col-lg-6 col-md-12">
	<%= render 'form', index_card: @index_card %>
  </div>
</div>
<div class="container">
	<div class="text-center">
		<div class="btn-group">
	      <%= link_to '<i class="fa fa-list"></i> List'.html_safe, index_cards_path, class: "btn btn-secondary"%>
	      <%= link_to '<i class="fa fa-info-circle"></i> View'.html_safe, @index_card, class: "btn btn-primary"%>
	      <%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, @index_card, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
	    </div>
    </div>
</div>