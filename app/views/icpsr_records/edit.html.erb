<% provide(:section, "Edit ICPSR Record") %>

<% if notice %>
  <div id="notice" class="container">
    <p class="alert alert-success" role="alert"><%= notice %></p>
  </div>
<% end %>

<div class="row padded-row">
    <div class="col-xl-4 col-lg-6 col-md-8 col-sm-12 mx-auto">
		<%= render 'form', icpsr_record: @icpsr_record %>
	</div>
</div>


<div class="container">
	<div class="text-center">
		<div class="btn-group">
	      <%= link_to '<i class="fa fa-list"></i> List'.html_safe, icpsr_records_path, class: "btn btn-secondary"%>
	      <%= link_to '<i class="fa fa-info-circle"></i> View'.html_safe, @icpsr_record, class: "btn btn-primary"%>
	      <%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, @icpsr_record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
	    </div>
    </div>
</div>
