<% provide(:section, "List ICPSR Records") %>
<% if notice %>
  <div id="notice" class="container">
    <p class="alert alert-danger" role="alert"><%= notice %></p>
  </div>
<% end %>

<div class="container">
  <form class="form-inline stateForm">
    <label for="selectState"><strong>Select a State: </strong></label>
    <%= collection_select(:state, :state_abbreviation, IcpsrRecord.all.uniq{|x| x.state_abbreviation} , :state_abbreviation, :state_abbreviation, {:prompt => true}, class: 'form-control', :onchange => "location.href = 'icpsr_records?state=' + this.value") %>
    <a href="/icpsr_records?state=*" class="btn btn-info">All States</a>
  </form>
</div>


<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Used check</th>
      <th>Icpsr</th>
      <th>Name</th>
      <th>Date execution</th>
      <th>Age</th>
      <th>Race</th>
      <th>Sex</th>
      <th>Occupation</th>
      <th>Crime</th>
      <th>Execution method</th>
      <th>Location execution</th>
      <th>Jurisdiction</th>
      <th>State</th>
      <th>State abbreviation</th>
      <th>County code</th>
      <th>County name</th>
      <th>Compensation case</th>
      <th>Icpsr state</th>
      
    </tr>
  </thead>

  <tbody>
    <% @icpsr_records.each do |icpsr_record| %>
      <tr>
        <td>
          <div class="btn-group">
            <%= link_to '<i class="fa fa-info-circle"></i> View'.html_safe, icpsr_record, class: "btn btn-primary"%>
            <%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_icpsr_record_path(icpsr_record), class: "btn btn-info"%>
            <%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, icpsr_record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
        <td>
          <% if icpsr_record.used_check == true %>
           <i class="fa fa-check fa-2x text-success"></i>
          <% else %>
           <i class="fa fa-times fa-2x text-danger"></i>
          <% end %>
        </td>
        <td><%= icpsr_record.icpsr_id %></td>
        <td><%= icpsr_record.name %></td>
        <td><%= icpsr_record.date_execution %></td>
        <td><%= icpsr_record.age %></td>
        <td><%= icpsr_record.race %></td>
        <td><%= icpsr_record.sex %></td>
        <td><%= icpsr_record.occupation %></td>
        <td><%= icpsr_record.crime %></td>
        <td><%= icpsr_record.execution_method %></td>
        <td><%= icpsr_record.location_execution %></td>
        <td><%= icpsr_record.jurisdiction %></td>
        <td><%= icpsr_record.state %></td>
        <td><%= icpsr_record.state_abbreviation %></td>
        <td><%= icpsr_record.county_code %></td>
        <td><%= icpsr_record.county_name %></td>
        <td><%= icpsr_record.compensation_case %></td>
        <td><%= icpsr_record.icpsr_state %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
