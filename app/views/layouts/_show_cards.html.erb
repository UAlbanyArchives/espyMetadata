
<% if file_group.split('; ').length > 1 %>

  <div id="<%= folder %>Controls" class="carousel slide glowing-border d-inline-block" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" role="listbox">

    <% file_group.split('; ').each_with_index do |file, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <a class="modalPreview" href="#" data-preview="<%= folder %>/<%= file %>">
            <img class="d-block img-fluid active" src="/images/<%= folder %>/<%= file %>"">
          </a>
        </div>
      <% else %>
        <div class="carousel-item">
          <a class="modalPreview" href="#" data-preview="<%= folder %>/<%= file %>">
            <img class="d-block img-fluid active" src="/images/<%= folder %>/<%= file %>"">
          </a>
        </div>
      <% end %>
    <% end %>
    </div>
    <a class="carousel-control-prev" href="#<%= folder %>Controls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#<%= folder %>Controls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<% else %>
  <a class="modalPreview" href="#" data-preview="<%= folder %>/<%= file_group.split('; ')[0] %>">
    <img class="plainImg" src="/images/<%= folder %>/<%= file_group.split('; ')[0] %>"/>
  </a>
<% end %>

<div class="modal fade" id="modalPreview">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <img id="previewWindow" />
      </div>
    </div>
  </div>
</div>
