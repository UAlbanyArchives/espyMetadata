
<% if this.file_group.include? "; " %>

  <div id="<%= folder %>Controls" class="carousel slide glowing-border d-inline-block" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" role="listbox">

    <% this.file_group.split('; ').each_with_index do |file, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <img class="d-block img-fluid active" src="/images/<%= folder %>/<%= file %>"">
        </div>
      <% else %>
        <div class="carousel-item">
          <img class="d-block img-fluid active" src="/images/<%= folder %>/<%= file %>"">
        </div>
      <% end %>
    <% end %>
    </div>
    <a class="carousel-control-prev" href="#<%= folder %>Controls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#<%= folder %>Controls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<% else %>
  <img src="/images/<%= folder %>/<%= this.root_filename %>"/>
<% end %>