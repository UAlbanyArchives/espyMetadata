
<% if file_group.split('; ').length > 1 %>

  <div id="<%= folder %>Controls" class="carousel slide d-inline-block" data-ride="carousel" data-interval="false">
    <ol class="carousel-indicators">
        <% file_group.split('; ').each_with_index do |file, index| %>
          <% if index == 0 %>
            <li data-target="#<%= folder %>Controls" data-slide-to="0" class="active"></li>
          <% else %>
            <li data-target="#<%= folder %>Controls" data-slide-to="<%= index %>"></li>
          <% end %>
        <% end %>
    </ol>
    <div class="carousel-inner" role="listbox">

    <% file_group.split('; ').each_with_index do |file, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <a class="modalPreview" href="#" data-preview="<%= file.split(".")[0] %>">
            <img class="d-block img-fluid glowing-border active" src="/images/<%= folder %>/<%= file %>">
          </a>
        </div>
        <div class="modal fade" id="<%= file.split(".")[0] %>">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <img class="previewWindow glowing-border" id="preview<%= file.split(".")[0] %>" src="/images/<%= folder %>/<%= file %>"  data_file="/images/<%= folder %>/<%= file %>"/>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <a class="modalPreview" href="#" data-preview="<%= file.split(".")[0] %>">
            <img class="d-block img-fluid glowing-border active" src="/images/<%= folder %>/<%= file %>">
          </a>
        </div>
        <div class="modal fade" id="<%= file.split(".")[0] %>">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <img class="previewWindow" id="preview<%= file.split(".")[0] %>" src="/images/<%= folder %>/<%= file %>" data-file="/images/<%= folder %>/<%= file %>" />
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
    <a class="carousel-control-prev" href="#<%= folder %>Controls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#<%= folder %>Controls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<% else %>
  <a class="modalPreview" href="#" data-preview="<%= file_group.split('; ')[0].split(".")[0] %>">
    <img class="plainImg" src="/images/<%= folder %>/<%= file_group.split('; ')[0] %>"/>
  </a>
  <div class="modal fade" id="<%= file_group.split('; ')[0].split(".")[0] %>">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <img class="previewWindow" id="preview<%= file_group.split('; ')[0].split(".")[0] %>" src="/images/<%= folder %>/<%= file_group.split('; ')[0] %>" data-file="/images/<%= folder %>/<%= file_group.split('; ')[0] %>" />
        </div>
      </div>
    </div>
  </div>
<% end %>

